{
  "name": "scottboyle",
  "version": "2.0.0",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "caniuse-lite": "^1.0.30000697",
    "core-js": "^2.5.5",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "css-variables-loader": "^2.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "marked": "^4.0.10",
    "mini-css-extract-plugin": "^0.5.0",
    "netlify-cli": "^17.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-document-meta": "^2.1.2",
    "react-dom": "^16.3.0",
    "react-router": "^3.2.1",
    "react-router-to-array": "^0.1.3",
    "react-test-renderer": "^16.3.1",
    "static-site-generator-webpack-plugin": "^3.4.2",
    "timeago-react": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "engines": {
    "node": "24.12.0",
    "npm": ">=6.7.0",
    "yarn": ">=1.13.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/scripts/(data|entry).js"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "moduleNameMapper": {
      "\\_redirects|.(ico|jpg|png|svg|txt|webmanifest|woff|xml)$": "<rootDir>/test/__mocks__/file.mock.js",
      "\\.(css)$": "<rootDir>/test/__mocks__/style.mock.js"
    },
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "build": "webpack -p --progress",
    "dev": "netlify dev --dir build",
    "dev:fast": "webpack-dev-server --progress",
    "format": "prettier --write 'src/**/*.@(css|js)'",
    "lint": "eslint \"src/**/*.js\" \"netlify/**/*.js\" \"webpack.config.babel.js\"",
    "postbuild": "node src/scripts/sitemap.js && node src/scripts/template.js",
    "predev": "yarn build",
    "prepush": "yarn lint && yarn test:coverage && cat coverage/lcov.info | coveralls",
    "test:coverage": "jest --coverage",
    "test": "jest"
  }
}
