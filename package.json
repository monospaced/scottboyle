{
  "name": "scottboyle",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "core-js": "^2.5.5",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "css-variables-loader": "^2.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "fetch-jsonp": "^1.1.3",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "json-loader": "^0.5.7",
    "lighthouse": "^2.9.4",
    "marked": "^0.3.19",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-document-meta": "^2.1.2",
    "react-dom": "^16.3.0",
    "react-router": "^3.2.1",
    "react-router-to-array": "^0.1.3",
    "react-test-renderer": "^16.3.1",
    "static-site-generator-webpack-plugin": "^3.4.1",
    "timeago-react": "^2.0.0",
    "url-loader": "^1.0.1",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1"
  },
  "engines": {
    "node": ">=8.11.1",
    "npm": ">=5.8.0",
    "yarn": ">=1.5.1"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js", "!src/scripts/(data|entry).js"],
    "coverageReporters": ["lcov", "text", "text-summary"],
    "moduleNameMapper": {
      "\\.(htaccess|ico|jpg|png|svg|webmanifest|woff|xml)$":
        "<rootDir>/test/__mocks__/file.mock.js",
      "\\.(css)$": "<rootDir>/test/__mocks__/style.mock.js"
    },
    "setupFiles": ["<rootDir>/test/setup.js"],
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  },
  "scripts": {
    "audit":
      "lighthouse https://scottboyle.co.uk/ --chrome-flags=--headless --output=json",
    "audit:build": "yarn audit --output=html --output-path=build/lighthouse",
    "audit:deploy": "yarn audit:build --quiet && bin/deploy-audit.sh",
    "build": "webpack -p --progress",
    "deploy": "yarn test && yarn build && bin/deploy.sh && yarn audit:deploy",
    "format": "prettier --write 'src/**/*.@(css|js)'",
    "prepush": "yarn test:coverage && cat coverage/lcov.info | coveralls",
    "start": "webpack-dev-server --progress",
    "test": "jest",
    "test:coverage": "jest --coverage"
  }
}
